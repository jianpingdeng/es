<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djp.common.entity.User">

    <resultMap type="user" id="userResultMap">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="status" column="status"/>
    </resultMap>

    <!-- 查询学生，根据id -->
    <select id="query_user_by_username" parameterType="String" resultType="user" resultMap="userResultMap">
        <![CDATA[
            SELECT * from t_mysql_user ut
                WHERE ut.username = #{username}
        ]]>
    </select>

    <!-- 查询学生列表 -->
    <select id="query_user_list"  resultType="com.manager.data.model.user" resultMap="userResultMap">
        <![CDATA[
            SELECT * from t_mysql_user
        ]]>
    </select>

</mapper>