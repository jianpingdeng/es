<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.djp.common.dao.IUserDao">
    <resultMap type="User" id="userListResult">
        <id column="id" property="id"/>
        <result column="username" property="username"></result>
        <result column="password" property="password"></result>
        <result column="salt" property="salt"></result>
        <result column="status" property="status"></result>
    </resultMap>
    <resultMap type="String" id="roleList">
        <result column="role" property="role"></result>
    </resultMap>
    <resultMap type="String" id="permissionList">
        <result column="permission" property="permission"></result>
    </resultMap>
    <!-- resultType的值要和Configuration.xml中的实体User的别名相同 -->
    <select id="selectUserByID" parameterType="int" resultType="User">
        select * from t_mysql_user where id = #{id}
    </select>
    <select id="findRoles" parameterType="User" resultType="roleList">
        SELECT r.role FROM t_mysql_roles r INNER JOIN t_mysql_user_role ru ON r.id = ru.role_id and ru.user_id = #{id}
    </select>
    <select id="findPermissions" parameterType="User" resultType="permissionList">
        SELECT p.permission FROM t_mysql_roles r
        INNER JOIN t_mysql_user_role ru ON r.id = ru.role_id and ru.user_id = #{id}
          INNER JOIN t_mysql_role_permission rp ON rp.role_id = r.id
            INNER JOIN t_mysql_permission p ON p.id=rp.permission_id;
    </select>
    <select id="selectUserByUsername" parameterType="String" resultType="User">
        select * from t_mysql_user where username = #{username}
    </select>

    <select id="queryAllUsers" resultMap="userListResult">
        select * from t_mysql_user
    </select>
    <insert id="insertUserEntity" parameterType="User" useGeneratedKeys="true">
        insert into  t_mysql_user (username,password,salt,status) values (#{username},#{password},#{salt},#{status})
    </insert>
    <update id="updateUser" parameterType="com.djp.common.entity.User">
        update t_mysql_user set
        username=#{username},password=#{password},status=#{status},salt=#{salt}
        where id=#{id}
    </update>
</mapper>